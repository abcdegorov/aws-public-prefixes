name: Update AWS IP prefixes

on:
  schedule:
    - cron: "0 2 * * *"
  workflow_dispatch:

permissions:
  contents: write

jobs:
  update:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - name: Ensure script is executable
        run: chmod +x ./extract-aws-prefixes.sh

      - name: Generate prefix files
        run: ./extract-aws-prefixes.sh aws-ipv4-prefixes.txt aws-ipv6-prefixes.txt

      - name: Commit changes
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"
          git add aws-ipv4-prefixes.txt aws-ipv6-prefixes.txt
          git diff --cached --quiet || git commit -m "chore: update AWS IP prefixes"

      - name: Push changes
        run: git push
